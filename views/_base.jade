block config
	include _config
doctype html
html( lang=Language )
	head
		title=title
		meta( charset="utf-8" )
		meta( name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" )
		meta( name='description', content=MetaDesc )
		meta( name='author', content=Author )
		if GoogleFonts
			link(rel="stylesheet", href="//fonts.googleapis.com/css?family=Lato", type='text/css')
		link( rel="stylesheet", href="./css/main.css", type="text/css" )
	body
		header
			h1 #{ title }
			h2 #{ sitedescription }
			include partials/_nav-main
		main
			block main
		footer
			ul
				li: a( href="http://t0t.github.io/sergiofores/" ) Sergio For√©s
				li: a( href="https://github.com/t0t/" ) Github
				li: a( href="https://www.linkedin.com/in/sergiofores/" ) Linkedin
				li: a( href="https://twitter.com/t0tinspire/" ) @t0tinspire
