//- BASE HTML
extends _base

//- Site Nav Main
append navmain
	include partials/_nav-main

//- Site Cover
append header
	include partials/_header

//- Main append
append main
	article.post
		figure
			img( src="#{ Posts[0].img }", alt="#{ Posts[0].title }" )
			figcaption - #{ Posts[0].title }
		h1.post-title #{ Posts[0].title }
		p #{ Posts[0].text }
		audio(controls)
			source(src="#{ Posts[0].audio }")
			Your browser does not support the <code>audio</code> element.
